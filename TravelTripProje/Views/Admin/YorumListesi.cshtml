@using TravelTripProje.Models.Siniflar
@model List<Yorumlar> 
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
    </tr>
    @{int i = 0;}
    @foreach (var x in Model)
    {
        <tr>
            <td>@{i++;} @i</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td>@x.Blogid</td>
            <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>